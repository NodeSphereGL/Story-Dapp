# ðŸš€ Story Protocol dApp Statistics Service - Production Environment
# Copy this file to .env and update the values for your production environment

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_HOST=localhost
DB_PORT=3306
DB_NAME=story_dapp
DB_USER=story_user
DB_PASSWORD=YOUR_STRONG_DATABASE_PASSWORD_HERE

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_PORT=8080
NODE_ENV=production
HOST=0.0.0.0

# =============================================================================
# STORYSCAN API CONFIGURATION
# =============================================================================
STORYSCAN_API_URL=https://api.storyscan.xyz
STORYSCAN_API_KEY=YOUR_STORYSCAN_API_KEY_HERE

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=info
LOG_FILE=/var/log/story-dapp/app.log
LOG_MAX_SIZE=100m
LOG_MAX_FILES=5

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
JWT_SECRET=YOUR_SUPER_SECRET_JWT_KEY_AT_LEAST_64_CHARACTERS_LONG
CORS_ORIGIN=https://yourdomain.com
CORS_CREDENTIALS=true

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
MAX_CONCURRENT_JOBS=5
JOB_TIMEOUT_MS=300000
BATCH_SIZE=100

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL_MS=30000
METRICS_ENABLED=true

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=7
BACKUP_DIR=/opt/backups

# =============================================================================
# CRON SCHEDULE CONFIGURATION
# =============================================================================
# Ingestion job schedule (every 6 hours)
INGESTION_CRON=0 */6 * * *
# Cleanup job schedule (daily at 2 AM)
CLEANUP_CRON=0 2 * * *
